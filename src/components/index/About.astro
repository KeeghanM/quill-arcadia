---
type AboutProps = {
  title: string
  anchor: string
  cta: {
    text: string
    link: string
  }
  image: {
    src: string
    alt: string
    side: "left" | "right"
  }
}
import Anchor from "../Anchor.astro"
const { title, cta, image, anchor } = Astro.props as AboutProps
---

<section class="bg-gray-900">
  {anchor ? <Anchor id={anchor} /> : null}
  <div
    class="gap-8 items-center py-8 px-4 mx-auto max-w-screen-xl xl:gap-16 md:grid md:grid-cols-2 sm:py-16 lg:px-6 border-b"
  >
    <img
      class={"w-full block" + (image.side === "right" ? " md:order-2" : "")}
      src={image.src}
      alt={image.alt}
    />
    <div class="mt-4 md:mt-0">
      <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-white">
        {title}
      </h2>
      <p class="mb-6 text-xl text-gray-400">
        <slot />
      </p>
      <a
        href={cta.link}
        class="inline-flex items-center text-white bg-lime-500 hover:bg-lime-700 focus:ring-4 font-medium rounded-lg text-sm px-5 py-2.5 text-center focus:ring-lime-900"
      >
        {cta.text}
        <svg
          class="ml-2 -mr-1 w-5 h-5"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            fill-rule="evenodd"
            d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
            clip-rule="evenodd"></path></svg
        >
      </a>
    </div>
  </div>
</section>
