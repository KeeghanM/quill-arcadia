---
import Layout from "../layouts/Layout.astro"
import Pricing from "../components/Pricing.astro"
import { getSession } from "auth-astro/server"
const session = await getSession(Astro.request)
if (session) {
  Astro.redirect("/dashboard")
}
---

<Layout
  title="Signup"
  description="This is the home page"
  noNav={false}
  stickyHeader={false}
>
  <section class="bg-gray-700 w-full">
    <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
      <div class="mx-auto max-w-screen-sm text-center">
        <h2
          class="mb-4 text-4xl tracking-tight font-extrabold leading-tight text-white"
        >
          Already signed up?
        </h2>
        <button
          id="login"
          class="focus:ring-4 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 bg-lime-500 hover:bg-lime-700 focus:outline-none focus:ring-lime-800 cursor-pointer"
          >Log In</button
        >
      </div>
    </div>
  </section>

  <div class="w-full px-12 grid place-items-center">
    <Pricing
      title="Ready to weave more engaging tales and epic adventures?"
      description="QuillArcadia is your personal assistant for creating, managing, and organizing your narratives. Whether you're a Dungeon Master preparing for your next campaign or an author looking to bring your characters to life, QuillArcadia has you covered."
    />
  </div>
</Layout>

<script>
  const { signIn } = await import("auth-astro/client")
  document.getElementById("login")?.addEventListener("click", () => {
    signIn("auth0")
  })
</script>
